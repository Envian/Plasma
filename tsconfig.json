{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "allowJs": false,
        "jsx": "react",
        "jsxFactory": "etch.dom",
        "declaration": true,
        "sourceMap": false,
        "outDir": "./lib",
        "rootDir": "./src",
        "removeComments": true,
        "importHelpers": true,
        "strict": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}
